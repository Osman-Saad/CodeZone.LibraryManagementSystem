@model IEnumerable<AuthorViewModel>
@{
}
<h4 class="text-center">All Authors</h4>
<br />
<br />
<a asp-action="Create" class="btn btn-info">Create New Author</a>
@if (Model.Count() > 0)
{
    <div class="d-flex justify-content-center mt-5">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Full Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Website</th>
                    <th scope="col">Bio</th>
                    <th scope="col">Books</th>
                    <th scope="col">Edit</th>
                    <th scope="col">Details</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var author in Model)
                {
                    <tr>
                        <td>@author.FullName</td>
                        <td>@author.Email</td>
                        <td>@author.Website</td>
                        <td>@author.Bio</td>
                        <td>@string.Join(" , ", author.Books.Select(b=>b.Title).ToList())</td>
                        <td>
                            <a asp-action="Edit" class="btn btn-warning" asp-route-id="@author.Id">Edit</a>
                        </td>
                        <td>
                            <a asp-action="Details" class="btn btn-primary" asp-route-id = "@author.Id">Details</a>
                        </td>
                        <td>
                            <a asp-action="Delete" class="btn btn-danger" asp-route-id="@author.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-primary mt-2" role="alert">
        No Authors is Recorded
    </div>
}

