@model IEnumerable<BookViewModel>

<h4 class="text-center">All Books</h4>
<br />
<br />
<a asp-action="Create" class="btn btn-info">Create New Book</a>
@if (Model.Count() > 0)
{
    <div class="d-flex justify-content-center mt-5">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Description</th>
                    <th scope="col">Author</th>
                    <th scope="col">Genre</th>
                    <th scope="col">Edit</th>
                    <th scope="col">Details</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var book in Model)
                {
                    <tr>
                        <td>@book.Title</td>
                        <td>@book.Description</td>
                        <td>@book.Author.FullName</td>
                        <td>@book.Genre</td>
                        <td>
                            <a asp-action="Edit" class="btn btn-warning" asp-route-id="@book.Id">Edit</a>
                        </td>
                        <td>
                            <a asp-action="Details" class="btn btn-primary" asp-route-id="@book.Id">Details</a>
                        </td>
                        <td>
                            <a asp-action="Delete" class="btn btn-danger" asp-route-id="@book.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-primary mt-2" role="alert">
        No Books is Recorded
    </div>
}

